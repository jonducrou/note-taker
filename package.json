{
  "name": "note-taker",
  "version": "1.6.0",
  "description": "Minimalist always-on-top note taking app",
  "main": "dist/main/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "NODE_ENV=development tsc -p src/main/tsconfig.json && NODE_ENV=development electron dist/main/main/main.js",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p src/main/tsconfig.json",
    "build:renderer": "vite build",
    "dist": "electron-builder",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "test": "jest FileStorage.test.ts basic.test.ts FileStorage.comprehensive.test.ts ipc-handlers.unit.test.ts",
    "test:all": "jest",
    "test:watch": "jest --watch FileStorage.test.ts basic.test.ts",
    "test:coverage": "jest FileStorage.test.ts basic.test.ts FileStorage.comprehensive.test.ts ipc-handlers.unit.test.ts --coverage"
  },
  "keywords": [
    "notes",
    "electron",
    "productivity"
  ],
  "author": "Note Taker",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0",
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "ts-jest": "^29.4.1",
    "typescript": "^5.0.0",
    "vite": "^4.0.0"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "@types/js-yaml": "^4.0.9",
    "date-fns": "^2.30.0",
    "electron-log": "^5.4.3",
    "gray-matter": "^4.0.0",
    "js-yaml": "^4.1.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "update-electron-app": "^3.1.1"
  },
  "build": {
    "appId": "com.notetaker.app",
    "productName": "Note Taker",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "icon": "app-icon.icns"
    },
    "publish": {
      "provider": "github",
      "owner": "jonducrou",
      "repo": "note-taker"
    }
  }
}
